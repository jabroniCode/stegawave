#!/bin/bash

if [ $# -ne 1 ] && [ $# -ne 2 ]; then
    echo "Usage: $0 <user_key> [api_key]"
    exit 1
fi

USER_KEY="$1"

# Get API key from environment variable first
API_KEY="$STEGAWAVE_API_KEY"

# try to get it from second arg
if [ -z "$API_KEY" ]; then
    if [ -n "$2" ]; then
        API_KEY="$2"
    fi
fi


if [ -z "$API_KEY" ]; then
    echo "STEGAWAVE_API_KEY not found"
fi

# Make the curl request
curl -H "X-API-Key: $API_KEY" \
     "https://api.stegawave.com/token?user_key=$USER_KEY"